.category-menu{
    overflow: hidden;
&__item{
    padding: 3rem 4rem;
    background-color: $color-menu;
    cursor: pointer;
    flex-grow: 1;
    @include transition(.5s);
    &:hover{
        transform: scale(1.1);
    }   
}
&__image{
    width: 7rem;
    height: 7rem;
}
&__name{
    display: block;
    color:$white;
    font-size: 2.5rem;
    margin-top: 1.5rem;
}
}