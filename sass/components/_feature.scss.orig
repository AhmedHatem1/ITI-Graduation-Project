//start feature
.feature {
    .image-wrapper {

        img
        {
        border: .2rem solid $white;
        @include border-radius(4rem);
        width: 100%;
        }
    }
    &__item:not(:last-child)
    {
        margin-bottom: 6rem
    }
    .content-wrapper{
        &--right{
            left: 3rem;    
        }
        &--left{
            right: 3rem;
        }
    
        &__description{
    
             &__point{
              line-height: 1.45;
              padding: 1.2rem 0;
              position: relative;
              margin-left: 2.4rem;
    
              &::before 
               {
                   content: "\f058";
                   font-family: FontAwesome;
                   font-weight: 700;
                   font-size: 2rem;
                   color: $color-primary;
                   position: absolute;
                   left: -3rem;
                   
                }
               &::after
               {
                content: "";
                 position: absolute;
                 width: calc(100% + 3.6rem);
                 height: .1rem;
                 left: -2.4rem;
                 top: 0;
                 background-color:#e8e8e8;
               }
             }
    
            
        }
    }
}
//end feature