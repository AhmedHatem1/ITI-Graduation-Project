.header
{
    background: linear-gradient(rgba(0,0,0,$header-overlay-opacity),rgba(0,0,0,$header-overlay-opacity)),
     url("../images/res1.jpeg") no-repeat center center ;
    width:100%;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    @include background-size-cover() ;
    
&__inner 
{
    text-align: center;
    max-width:calc(100% / 2);     
}
&__inner__title
{
    display: inline-block;
    color: $color-primary;
    letter-spacing: 5px;
    padding: 10px;
}
&__inner__description
{
color:#BBB;
font-weight: 300;
line-height: 1.7;
font-size: 6rem;
font-weight: bold;
letter-spacing: 2px;
// text-transform: uppercase;
}
&__inner__btn
{
font-size: 1.7rem;
padding: 1.6rem;
margin: 1rem;
@include border-radius(100px)
}
}

